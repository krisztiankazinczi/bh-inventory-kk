<script>
    function addGroup() {
        $('#group').modal();
    }

    function editGroup(id) {
        const row = document.getElementById(id);
        document.getElementById('hidden-id').value = id;
        let groupname;
        for(let i = 0; i < row.children.length; i++ ) {
            if (row.children[i].getAttribute("data-groupname")) groupname = row.children[i].getAttribute("data-groupname");
        }
        
        const group_name = document.getElementById('group_name');
        group_name.value = groupname;

        const form = document.getElementsByTagName('form')[0];
        form.removeAttribute('action');
        form.setAttribute('action', '/groups/editGroup');

        $('#group').modal({backdrop: 'static', keyboard: false});

       
    }

    function cancel() {
        const form = document.getElementsByTagName('form')[0];
        form.removeAttribute('action');
        form.setAttribute('action', '/groups/addGroup');

        document.getElementById('group_name').value = "";
        document.getElementById('hidden-id').value = "";
        $('#group').modal('hide');
    }

</script>